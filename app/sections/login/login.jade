.container
  .row
    .col-md-6.col-md-offset-3
      form(ng-submit="vm.login()")
        fieldset.form-group
          label Email
          input.form-control(type="text" ng-model="vm.user.email" placeholder="john@email.com")

        fieldset.form-group
          label Password
          input.form-control(type="password" ng-model="vm.user.password" placeholder="*****")

        fieldset.form-group
          button.btn.btn-success(type="submit") Sign in
